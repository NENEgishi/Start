<% if flash[:out] %>
<div class="flash">
	<%= flash[:out] %>
</div>
<% elsif flash[:in] %>
<div class="flash">
	<%= flash[:in] %>
</div>
<% end %>

<h1>Starttops</h1>
<table class="table table-striped">
	<% if user_signed_in? %>

	<tr><td><%=link_to 'ログアウト',destroy_user_session_path, method: :delete,class:"btn btn-info" %></td></tr>

	<% else %>

	<tr><td><%=link_to 'ログイン',new_user_session_path,class:"btn btn-info" %></td></tr>

	<tr><td><%=link_to '新規会員',new_user_registration_path,class:"btn btn-info" %></td></tr>

	<% end %>
</table>
